<launch>
    <!-- Run transform from a to reference fiducial -->
    
    <!-- Run usb_cam -->
    <node name="usb_cam" pkg="usb_cam" type="usb_cam_node">
      <param name="video_device" value="/dev/video0" />
      <param name="pixel_format" value="yuyv" />
    </node> 

    <!-- Run image_proc -->
    <node name="image_proc" pkg="image_proc" ns="usb_cam" type="image_proc" output="screen"/>
    <!-- Arguments for apriltag_ros -->
    <arg name="camera_name" default="/usb_cam" />
    <arg name="image_topic" default="image_rect_color" />
    <arg name="queue_size" default="1" />
    <!-- Run apriltag_ros -->
    <include file="$(find apriltag_ros)/launch/continuous_detection.launch" pass_all_args="true"/>
    <!-- Run tf2_broadcaster (arg=static transform from tag0/Arm_Bundle to mover6_a/base_link)-->
    <node name="static_tf2_broadcaster" pkg="mover6_gazebo" type="static_tf2_broadcaster.py" args="head_camera mover6_a/world 0 0 10 0 0 0" output="screen"/>
    <!-- Run tf2_listener (arg=publish rate)-->
    <node name="tf2_listener" pkg="fiducial_recognition" type="tf2_listener.py" args="2" output="screen"/>

</launch>